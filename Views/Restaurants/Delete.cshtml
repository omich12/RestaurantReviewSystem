@model RestaurantReviewSystem.Models.Restaurant

@{
    ViewData["Title"] = "Delete Restaurant";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h3 class="text-danger">Delete Confirmation</h3>
            <p class="lead">Are you sure you want to delete this restaurant?</p>

            <div class="card bg-danger-light border-danger mb-4">
                <div class="card-body">
                    <p><strong>Name:</strong> @Model.Name</p>
                    <p><strong>Location:</strong> @Model.Location</p>
                    <p><strong>Cuisine Type:</strong> @Model.CuisineType</p>
                    <p class="text-danger mb-0">
                        <strong>Warning:</strong> This will also delete all associated reviews.
                    </p>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a asp-action="Index" class="btn btn-secondary">No, Cancel</a>
            </form>
        </div>
    </div>
</div>
