@model RestaurantReviewSystem.Models.Restaurant

@{
    ViewData["Title"] = "Create Restaurant";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1>Add New Restaurant</h1>
            <form asp-action="Create" method="post" class="mt-4">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Restaurant Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter restaurant name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Location" class="form-label">Location</label>
                    <input asp-for="Location" class="form-control" placeholder="Enter location" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CuisineType" class="form-label">Cuisine Type</label>
                    <input asp-for="CuisineType" class="form-control" placeholder="e.g., Italian, Indian, Chinese" />
                    <span asp-validation-for="CuisineType" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">Create Restaurant</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
